<section>
    <div id="nav-bar" class="flex hover:bg-neutral-800 hover:transition hover:ease-in-out duration-500 hover:duration-500 w-screen flex-row max-h-28 fixed z-30">
        <div id="menu" class="flex-start w-screen basis-1/3 mt-auto pt-6 pb-3 ml-auto pl-5 mb-auto">
            <img src="{{ 'menu.svg' | asset_url }}" width="60"></img>
        </div>
        <div id="logo" class="flex-end basis-1/3 my-auto p-auto">
            <a class="flex-end basis-1/3 z-40" href="/" width="96px">
                <img src="{{ 'MC.png' | asset_url }}" width="96px" class="mx-auto">
            </a>
        </div>
        <div id="cart" class="flex-end basis-1/3 my-auto py-3 mr-auto pr-5">
            <div class="flex-end p-1 rounded-full w-12 hover:w-48 hover:bg-neutral-600 hover:ml-auto hover:duration-500 duration-500 ml-auto">
                <img src="{{ 'shopping_cart.svg' | asset_url }}" width="40" class="ml-auto">
            </div>
        </div>
    </div>
    <div id="background-image" class="mx-auto overflow-y-auto z-0">
        <img src={{ 'Micah_web_desktop.png' | asset_url }}" class="mx-auto overflow-y-auto"></img>
    </div>
</section>

